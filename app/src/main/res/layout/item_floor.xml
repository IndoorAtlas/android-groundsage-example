<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/floorName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:text="Name"/>

    <TextView
        android:id="@+id/floorLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/floorName"
        android:text="floor level: " />

    <View
        android:id="@+id/separationLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/floorName"
        android:background="@color/colorSeparationLine"/>

</RelativeLayout>
