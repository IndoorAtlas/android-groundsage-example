<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <View
            android:id="@+id/colorView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/areaNameView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/colorView"
            android:text="Name"/>

        <TextView
            android:id="@+id/floorLevelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/areaNameView"
            android:text="floor level: " />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/densityPropertyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="25dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/countView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="count: "/>
        <TextView
            android:id="@+id/densityValueView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/countView"
            android:text="density: "/>
        <TextView
            android:id="@+id/densityLevelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/densityValueView"
            android:text="density level: "/>

    </RelativeLayout>

    <View
        android:id="@+id/separationLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorSeparationLine"/>
</LinearLayout>

